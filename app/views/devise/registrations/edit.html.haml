%h2=t('edit_account.header')
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f|
  = f.error_notification
  = display_base_errors resource
  = f.input :name, :label => t('name'), :autofocus => true
  = f.input :email, :label => t('email'), :required => true
  = f.input :password, :label => t('password'), :autocomplete => "off", :hint => t('edit_account.password_hint'), :required => false
  = f.input :password_confirmation, :label => t('sign_up.password_confirmation'), :required => false
  = f.input :current_password, :label => t('edit_account.current_password'), :hint => t('edit_account.current_password_hint'), :required => true
  = f.button :submit, t('edit_account.submit'), :class => 'btn-primary'
%h3=t('edit_account.cancel_account_header')
%p
  =t('edit_account.unhappy')
  #{link_to t('edit_account.cancel_account'), registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}.
= link_to t('back'), :back
