%h2=t('sign_up.header')
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
  = f.error_notification
  = display_base_errors resource
  = f.input :name, :label => t('name'), :autofocus => true
  = f.input :email, :label => t('email'), :required => true
  = f.input :password, :label => t('password'), :required => true
  = f.input :password_confirmation, :label => t('sign_up.password_confirmation'), :required => true
  = f.button :submit, t('sign_up.submit'), :class => 'btn-primary'
= render "devise/shared/links"
